<!DOCTYPE html>
<html>

<head>
  <title>BadBananas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 	 'application', 'https://fonts.googleapis.com/css?family=Gloria+Hallelujah' %>
  <%= stylesheet_link_tag 	 'application', 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	<%= render 'layouts/header' %>
	<div class="container">
		
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-info") %>
		<% end %>	

		<%= yield %>

	</div>

</body>

</html>
